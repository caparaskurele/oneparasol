// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String
  email         String          @unique
  password      String
  emailVerified Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  // Relations
  learnings     Learning[]
  otpTokens     OTPToken[]
  resetTokens   PasswordReset[]
  
  // Points and rewards
  totalPoints   Int             @default(0)
  
  @@map("users")
}

model OTPToken {
  id        String   @id @default(cuid())
  userId    String
  email     String
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([email])
  @@map("otp_tokens")
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  code      String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("password_resets")
}

model Learning {
  id            String          @id @default(cuid())
  userId        String
  topic         String          // "Python", "SQL", "Excel", "Power BI", "General Learning"
  title         String
  content       String
  code          String?
  files         String          @default("[]") // JSON array of filenames
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  // Relations
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([topic])
  @@map("learnings")
}
